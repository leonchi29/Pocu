<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@drawable/gradient_lockdown_background">

    <!-- Emoji grande -->
    <TextView
        android:id="@+id/tvEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”’"
        android:textSize="100sp" />

    <TextView
        android:id="@+id/tvBlockedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISPOSITIVO BLOQUEADO"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tvBlockedMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:alpha="0.95"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp" />

    <TextView
        android:id="@+id/tvUnblockInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:alpha="0.7"
        android:textAlignment="center"
        android:layout_marginTop="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenPlayStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir Play Store"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        app:cornerRadius="24dp"
        app:icon="@android:drawable/ic_menu_search"
        style="@style/Widget.MaterialComponents.Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir Ajustes"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:cornerRadius="24dp"
        app:icon="@android:drawable/ic_menu_preferences"
        style="@style/Widget.MaterialComponents.Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir al inicio"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:cornerRadius="24dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

</LinearLayout>

