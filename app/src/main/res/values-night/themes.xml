<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Dark Mode -->
    <style name="Theme.Pocu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color - Morado oscuro -->
        <item name="colorPrimary">@color/purple_dark_variant</item>
        <item name="colorPrimaryVariant">@color/purple_dark_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background and surface -->
        <item name="android:colorBackground">@color/purple_dark_surface</item>
        <item name="colorSurface">@color/purple_dark_primary</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/purple_dark_primary</item>
        <!-- Button colors -->
        <item name="materialButtonStyle">@style/Widget.Pocu.Button.Dark</item>
    </style>

    <!-- Custom button style for dark mode -->
    <style name="Widget.Pocu.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/purple_dark_variant</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>